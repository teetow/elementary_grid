  "version": "0.2.0",
  "configurations": [
    {
      "name": "Full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "yarn dev",
      "serverReadyAction": {
        "pattern": ".+?(https?://.+)",
        "action": "startDebugging",
        "name": "Client"
      }
    },
    {
      "name": "Server",
      "type": "node-terminal",
      "request": "launch",
      "command": "yarn dev",
      "env": {
        "DEBUG": "vps:routing"
      }
    },
    {
      "name": "Client",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}"
    },
  ]
}
